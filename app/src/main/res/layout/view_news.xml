<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:cr="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"

              android:layout_height="match_parent">
    <com.project.stephencao.smartbj.view.ViewPagerIndicator
            android:id="@+id/vi_news_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/title_bar9"
            android:orientation="horizontal"
            cr:visible_tab_num="4"
    >
    </com.project.stephencao.smartbj.view.ViewPagerIndicator>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/vp_news_fragment_content"
            android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
</LinearLayout>