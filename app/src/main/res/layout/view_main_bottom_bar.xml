<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="bottom"
              android:background="#aba9a9"
              android:layout_width="match_parent"
              android:layout_height="60dp">
    <LinearLayout android:layout_width="0dp"
                  android:gravity="center"
                  android:id="@+id/ll_main_bottom_bar_home"
                  android:orientation="vertical"
                  android:layout_height="match_parent"
                  android:layout_weight="1">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:clickable="false"
                     android:src="@drawable/home_normal"
                     android:id="@+id/ib_main_bottom_bar_home"
                     android:background="#0000"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_main_bottom_bar_home"
                  android:textColor="#ffffff"
                  android:text="HOME"/>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:gravity="center"
                  android:id="@+id/ll_main_bottom_bar_news"
                  android:orientation="vertical"
                  android:layout_height="match_parent"
                  android:layout_weight="1">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:clickable="false"
                     android:src="@drawable/news_normal"
                     android:id="@+id/ib_main_bottom_bar_news"
                     android:background="#0000"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_main_bottom_bar_news"
                  android:layout_height="wrap_content"
                  android:textColor="#ffffff"
                  android:text="NEWS"/>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:gravity="center"
                  android:id="@+id/ll_main_bottom_bar_service"
                  android:orientation="vertical"
                  android:layout_height="match_parent"
                  android:layout_weight="1">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:clickable="false"
                     android:src="@drawable/service_normal"
                     android:id="@+id/ib_main_bottom_bar_service"
                     android:background="#0000"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_main_bottom_bar_service"
                  android:textColor="#ffffff"
                  android:text="SERVICE"/>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:gravity="center"
                  android:id="@+id/ll_main_bottom_bar_help"
                  android:orientation="vertical"
                  android:layout_height="match_parent"
                  android:layout_weight="1">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:clickable="false"
                     android:src="@drawable/help_normal"
                     android:id="@+id/ib_main_bottom_bar_help"
                     android:background="#0000"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_main_bottom_bar_help"
                  android:textColor="#ffffff"
                  android:text="HELP"/>

    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
                  android:gravity="center"
                  android:id="@+id/ll_main_bottom_bar_settings"
                  android:orientation="vertical"
                  android:layout_height="match_parent"
                  android:layout_weight="1">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:clickable="false"
                     android:src="@drawable/settings_normal"
                     android:id="@+id/ib_main_bottom_bar_settings"
                     android:background="#0000"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_main_bottom_bar_settings"
                  android:textColor="#ffffff"
                  android:text="HELP"/>

    </LinearLayout>

</LinearLayout>
